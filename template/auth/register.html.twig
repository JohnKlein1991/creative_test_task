{% extends 'main.html.twig' %}

{% block title %}
    Регистрация пользователя
{% endblock %}

{% block content %}
    <h2>Регистрация пользователя</h2>

    {% include 'error_block.html.twig' %}

    <form method="post">
        <div class="form-group">
            <label for="username">Имя пользователя</label>
            <input type="text" name="username" class="form-control" id="username" placeholder="username">
        </div>
        <div class="form-group">
            <label for="password">Пароль</label>
            <input type="password" name="password" class="form-control" id="password" placeholder="123456">
        </div>
        <div class="form-group">
            <label for="password_confirm">Пароль еще раз</label>
            <input type="password" name="password_confirm" class="form-control" id="password_confirm" placeholder="123456">
        </div>
        <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
    </form>
{% endblock %}