{% extends 'main.html.twig' %}

{% block title %}{{ trailers | length }} iTunes Movie trailers{% endblock %}

{% block content %}
    <div class="container">
        <section class="jumbotron text-center">
            <div class="container">
                <h1 class="jumbotron-heading">{{ trailers | length }} iTunes Movie trailers</h1>
            </div>
        </section>
        {% set count = 0 %}
        {% for trailer in trailers %}
            {% if count == 0 %}
                <div class="row">
            {% endif %}
                    <div class="col-md-4">
                        <div class="card mb-4 box-shadow">
                            <img class="card-img-top" src="{{ trailer.image }}" alt="Card image cap">
                            <div class="card-body">
                                <a href="/movie/{{ trailer.id }}" class="card-text">{{ trailer.title }}</a>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="btn-group">
                                        <a class="btn btn-sm btn-outline-secondary" href="/movie/{{ trailer.id }}">View</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            {% set count = count + 1 %}
            {% if count == 3 or loop.last %}
                </div>
                {% set count = 0 %}
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}
