{% extends 'main.html.twig' %}

{% block title %}{{ trailers | length }} iTunes Movie trailers{% endblock %}

{% block content %}
    <div class="container">
        <h1 class="mt-5 mb-4">{{ trailers | length }} iTunes Movie trailers</h1>
        <table class="table table-bordered">
            {% for trailer in trailers %}
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="{{ trailer.image }}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{ trailer.title }}</h5>
                    </div>
                </div>
            {% endfor %}
        </table>
    </div>
{% endblock %}
